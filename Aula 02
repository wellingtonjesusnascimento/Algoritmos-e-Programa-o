    printf("%i. Calculo da media aritmetica das notas: %f\n\n", d, calculomedia);

    int calculoladometro = ladodoquadradrometro*ladodoquadradrometro;

    printf("%i. Construir um algoritmo para apresentar o calculo da area de um quadradro de 350m de lado: %d\n\n", e, calculoladometro);

    float calculoraio = pi*(raiocm*raiocm);

    printf("%i. Area do circulo: %f\n\n", f, calculoladometro);

    float calculoexpressao = (20-15)/2;
    float calculoexpressao2 = 2*(5/20)+30/(15*2);
    float calculoexpressao3 = 35/(6+2);
    float calculoexpressao4 = 3%4;

    printf("%i. Algoritmo que calcule o valor das expressoes: %.2f, %.2f, %.2f, %.2f", g, calculoexpressao, calculoexpressao2, calculoexpressao3, calculoexpressao4);

